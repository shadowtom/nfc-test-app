<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:nfc_test_app.ViewModels"
             x:Class="nfc_test_app.MainPage"
             Title="NFC Reader"
             x:DataType="vm:MainViewModel">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Header -->
            <Frame BackgroundColor="#512BD4" 
                   CornerRadius="10" 
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📱 Lector NFC"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <Label Text="Acerca tu tarjeta NFC al dispositivo"
                           FontSize="14"
                           TextColor="White"
                           HorizontalOptions="Center"
                           Opacity="0.9" />
                </VerticalStackLayout>
            </Frame>

            <!-- Status Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Estado"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333" />

                    <Label Text="{Binding StatusMessage}"
                           FontSize="14"
                           TextColor="#666"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

            <!-- Scan Button -->
            <Button Text="{Binding ScanButtonText}"
                    Command="{Binding ToggleScanCommand}"
                    BackgroundColor="{Binding ScanButtonColor}"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="60"
                    Margin="0,10,0,0" />

            <!-- Last Tag Info -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="20"
                   HasShadow="True">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                      ColumnDefinitions="Auto,*"
                      RowSpacing="12"
                      ColumnSpacing="15">

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="Última Tarjeta Detectada"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333"
                           Margin="0,0,0,5" />

                    <!-- Tag ID -->
                    <Label Grid.Row="1" Grid.Column="0"
                           Text="ID:"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#512BD4"
                           VerticalOptions="Center" />
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding LastTagId}"
                           FontSize="14"
                           TextColor="#333"
                           LineBreakMode="CharacterWrap"
                           VerticalOptions="Center" />

                    <!-- Tag Type -->
                    <Label Grid.Row="2" Grid.Column="0"
                           Text="Tipo:"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#512BD4"
                           VerticalOptions="Center" />
                    <Label Grid.Row="2" Grid.Column="1"
                           Text="{Binding LastTagType}"
                           FontSize="14"
                           TextColor="#333"
                           VerticalOptions="Center" />

                    <!-- Detection Time -->
                    <Label Grid.Row="3" Grid.Column="0"
                           Text="Hora:"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#512BD4"
                           VerticalOptions="Center" />
                    <Label Grid.Row="3" Grid.Column="1"
                           Text="{Binding LastDetectionTime}"
                           FontSize="14"
                           TextColor="#333"
                           VerticalOptions="Center" />
                </Grid>
            </Frame>

            <!-- History Section -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Historial de Lecturas"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#333"
                               VerticalOptions="Center" />

                        <Button Grid.Column="1"
                                Text="Limpiar"
                                Command="{Binding ClearHistoryCommand}"
                                BackgroundColor="#E0E0E0"
                                TextColor="#333"
                                FontSize="12"
                                Padding="15,8"
                                CornerRadius="5" />
                    </Grid>

                    <CollectionView ItemsSource="{Binding TagHistory}"
                                    SelectionMode="None">
                        <CollectionView.EmptyView>
                            <Label Text="No hay lecturas aún"
                                   FontSize="14"
                                   TextColor="#999"
                                   HorizontalOptions="Center"
                                   Margin="0,20,0,0" />
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#F5F5F5"
                                       CornerRadius="8"
                                       Padding="15"
                                       Margin="0,5"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding DisplayText}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#333" />
                                        <Label Text="{Binding DetailText}"
                                               FontSize="12"
                                               TextColor="#666" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
